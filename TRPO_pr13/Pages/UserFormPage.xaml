<Page x:Class="TRPO_pr13.Pages.UserFormPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TRPO_pr13.Pages"
      xmlns:validators="clr-namespace:TRPO_pr13.Validators"
      xmlns:services="clr-namespace:TRPO_pr13.Service"
      mc:Ignorable="d" 
      d:DesignHeight="570" d:DesignWidth="800"
      Title="UserFormPage">
    <Page.Resources>
        <services:RoleService x:Key="roleService"/>
    </Page.Resources>
    <Grid>
        <StackPanel>
            <StackPanel>
                <Label>Логин</Label>
                <StackPanel>
                    <TextBox x:Name="login">
                        <TextBox.Text >
                            <Binding Path="Login">
                                <Binding.ValidationRules>
                                    <validators:LoginValidation/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                    <ItemsControl ItemsSource="{Binding ElementName=login, Path=(Validation.Errors)}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ErrorContent}" Style="{StaticResource message}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>
            <StackPanel>
                <Label>Имя пользователя</Label>
                <StackPanel>
                    <TextBox x:Name="name">
                        <TextBox.Text >
                            <Binding Path="Name">
                                <Binding.ValidationRules>
                                    <validators:EmptyValidation/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                    <ItemsControl ItemsSource="{Binding ElementName=name, Path=(Validation.Errors)}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ErrorContent}" Style="{StaticResource message}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>
            <StackPanel>
                <Label>Электронная почта
                </Label>
                <StackPanel>
                    <TextBox x:Name="email">
                        <TextBox.Text >
                            <Binding Path="Email">
                                <Binding.ValidationRules>
                                    <validators:EmailValidation/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                    <ItemsControl ItemsSource="{Binding ElementName=email, Path=(Validation.Errors)}" >
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ErrorContent}" Style="{StaticResource message}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>
            <StackPanel>
                <Label>Пароль пользователя
                </Label>
                <StackPanel>
                    <TextBox x:Name="password">
                        <TextBox.Text >
                            <Binding Path="Password">
                                <Binding.ValidationRules>
                                    <validators:PasswordValidation/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                    <ItemsControl ItemsSource="{Binding ElementName=password, Path=(Validation.Errors)}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ErrorContent}" Style="{StaticResource message}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>
            <StackPanel>
                <Label>Дата и время создания пользователя</Label>
                <StackPanel>
                    <TextBox x:Name="date">
                        <TextBox.Text>
                            <Binding Path="CreatedAt">
                                <Binding.ValidationRules>
                                    <validators:EmptyValidation/>
                                    <validators:DateValidation/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                    <ItemsControl ItemsSource="{Binding ElementName=date, Path=(Validation.Errors)}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ErrorContent}" Style="{StaticResource message}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>

            <StackPanel>
                    <Label>Ссылка на аватар</Label>
                    <StackPanel>
                        <TextBox x:Name="avatar">
                            <TextBox.Text>
                                <Binding Path="Profile.AvatarUrl">
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                    </StackPanel>
                </StackPanel>

            <StackPanel>
                <StackPanel>
                    <Label>Номер телефона</Label>
                    <StackPanel>
                        <TextBox x:Name="phone">
                            <TextBox.Text>
                                <Binding Path="Profile.Phone">
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <StackPanel>
                <StackPanel>
                    <Label>День рождения</Label>
                    <StackPanel>
                        <TextBox x:Name="birthday">
                            <TextBox.Text>
                                <Binding Path="Profile.Birthday">
                                    <Binding.ValidationRules>
                                        <validators:DateValidation/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                        <ItemsControl ItemsSource="{Binding ElementName=birthday, Path=(Validation.Errors)}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ErrorContent}" Style="{StaticResource message}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <StackPanel>
                <StackPanel>
                    <Label>Краткое описание</Label>
                    <StackPanel>
                        <TextBox x:Name="bio">
                            <TextBox.Text>
                                <Binding Path="Profile.Bio">
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <StackPanel>
                <Label>Группа</Label>
                <ComboBox ItemsSource="{Binding Source={StaticResource roleService}, Path=Roles}"
                    DisplayMemberPath="Title"
                     SelectedItem="{Binding Role}"/>
            </StackPanel>
            <StackPanel>
                    <Button Click="save">Сохранить в БД</Button>
                    <Button Click="back">Назад</Button>
                </StackPanel>
            </StackPanel>
    </Grid>
</Page>

<Page x:Class="TRPO_pr13.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TRPO_pr13.Pages"
      xmlns:validators="clr-namespace:TRPO_pr13.Validators"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfilePage">

    <Grid>
        <StackPanel>
            <StackPanel>
                <Label>Аватар</Label>

                <StackPanel>
                    <Border BorderBrush="Gray" BorderThickness="1" Height="100" Width="100">
                        <Image Source="{Binding Profile.AvatarUrl}"/>
                    </Border>
                    <Button Click="AvatarButton_Click">Выбрать аватар</Button>
                </StackPanel>
            </StackPanel>

            <StackPanel>
                <StackPanel>
                    <Label>Номер телефона</Label>
                    <StackPanel>
                        <TextBox x:Name="phone">
                            <TextBox.Text>
                                <Binding Path="Profile.Phone">
                                    <Binding.ValidationRules>
                                        <validators:EmptyValidation/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                        <ItemsControl ItemsSource="{Binding ElementName=phone, Path=(Validation.Errors)}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ErrorContent}" Style="{StaticResource message}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <StackPanel>
                <StackPanel>
                    <Label>День рождения</Label>
                    <StackPanel>
                        <TextBox x:Name="birthday">
                            <TextBox.Text>
                                <Binding Path="Profile.Birthday">
                                    <Binding.ValidationRules>
                                        <validators:DateValidation/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                        <ItemsControl ItemsSource="{Binding ElementName=birthday, Path=(Validation.Errors)}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ErrorContent}" Style="{StaticResource message}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <StackPanel>
                <StackPanel>
                    <Label>Краткое описание</Label>
                    <StackPanel>
                        <TextBox x:Name="bio">
                            <TextBox.Text>
                                <Binding Path="Profile.Bio">
                                    <Binding.ValidationRules>
                                        <validators:EmptyValidation/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                        <ItemsControl ItemsSource="{Binding ElementName=bio, Path=(Validation.Errors)}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ErrorContent}" Style="{StaticResource message}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <Button Click="save">Сохранить в БД</Button>
            <Button Click="back">Назад</Button>
        </StackPanel>
    </Grid>
</Page>

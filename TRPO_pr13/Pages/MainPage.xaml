<Page x:Class="TRPO_pr13.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TRPO_pr13.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="570" d:DesignWidth="800"
      DataContext="{Binding RelativeSource={RelativeSource Self}}"
      Title="MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Click="go_form">Добавить</Button>
            <Button Click="delete">Удалить</Button>
            <Button Click="role">К ролям</Button>
        </StackPanel>
        <ListView Grid.Row="1"
                  ItemsSource="{Binding service.Users}"
                  MouseDoubleClick="Edit"
                  SelectedItem="{Binding user}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel>
                                <TextBlock Text="{Binding Login}"/>
                                <TextBlock Text="{Binding Name}"/>
                                <TextBlock Text="{Binding Email}"/>
                                <TextBlock Text="{Binding Password}"/>
                                <TextBlock Text="{Binding CreatedAt, StringFormat={}{0:dd.MM.yyyy}}"/>
                                <TextBlock Text="{Binding Role.Title}"/>
                            </StackPanel>
                            <Border BorderBrush="Gray" BorderThickness="1" Height="100" Width="100">
                                <Image Source="{Binding Profile.AvatarUrl, TargetNullValue={x:Null}}"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>

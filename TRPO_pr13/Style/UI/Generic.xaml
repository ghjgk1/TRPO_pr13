<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource ButtonStandardNormalBrush}"/>
        <Setter Property="Padding" Value="0 2"/>
        <Setter Property="Margin" Value="5 2 4 1"/>
        <Setter Property="Padding" Value="7"/>


        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border 
                    Background="{TemplateBinding Background}"
                    Padding="{TemplateBinding Padding}"
                    Margin ="{TemplateBinding Margin}"
                    CornerRadius="10">
                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource ButtonStandardHoverBrush}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{DynamicResource ButtonStandardPressedBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="Grid">
        <Setter Property="Background" Value="{DynamicResource WindowBackgroundBrush}"/>
    </Style>

    <Style TargetType="ListView">
        <Setter Property="Background" Value="{DynamicResource WindowBackgroundBrush}"/>
    </Style>
    
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <Style x:Key="message" TargetType="TextBlock">
        <Setter Property="Foreground" Value="Red"/>
    </Style>


</ResourceDictionary>